{
  "name": "eureka-peopleops-backend",
  "version": "1.0.0",
  "description": "Eureka PeopleOps Backend",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "npm run copy-hbs && node dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "email:test": "npm run build && npm run copy-hbs && node dist/src/main.js",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --config jest.config.js",
    "test:cov": "jest --coverage --config jest.config.js",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:ci": "jest --ci --coverage --reporters='default' --reporters='jest-junit'",
    "typeorm": "ts-node -P ./tsconfig.json -r tsconfig-paths/register --transpile-only ./node_modules/typeorm/cli.js",
    "migration:show": "cross-var npm run typeorm migration:show -- -d ./typeorm-datasource.config.ts",
    "migration:create": "cross-var npm run typeorm migration:create ./src/migration/$npm_config_name",
    "migration:generate": "cross-var npm run typeorm migration:generate ./src/migration/$npm_config_name -- -d ./typeorm-datasource.config.ts",
    "migration:run": "cross-var npm run typeorm migration:run -- -d ./typeorm-datasource.config.ts",
    "migration:revert": "cross-var npm run typeorm -- -d ./typeorm-datasource.config.ts migration:revert",
    "prettier": "prettier --write \"**/*.{json,ts}\"",
    "prepare": "cd .. && husky install .husky",
    "copy-hbs": "copyfiles -u 1 src/modules/common/email/templates/*.hbs dist/src/",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.784.0",
    "@aws-sdk/client-location": "^3.782.0",
    "@aws-sdk/client-s3": "^3.744.0",
    "@aws-sdk/client-ses": "^3.577.0",
    "@aws-sdk/client-transcribe": "^3.782.0",
    "@aws-sdk/s3-request-presigner": "^3.744.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^7.1.16",
    "@nestjs/typeorm": "^10.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "copyfiles": "^2.4.1",
    "cron": "^4.1.4",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "moment-timezone": "^0.6.0",
    "nanoid": "^3.3.8",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.12",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/multer": "^1.4.11",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-var-no-babel": "^1.2.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^9.1.7",
    "jest": "^29.3.1",
    "lint-staged": "^15.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@app/user(|/.*)$": "<rootDir>/libs/user/src/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build",
      "pre-push": "npm run test:cov"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
